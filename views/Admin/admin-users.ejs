<html>
    <head>
        <title>Display all users</title>
        <!-- adding an favicon -->
        <link rel="shortcut icon" type="image/jpg" href="/images/thebluelogo.png" />
    </head>
    <body>
        <%- include("../partials/adminNav"); %>
        <div class="container">
            <h1>Display all users</h1>
            <%= if (users.length > 0) { %>
                <table>
                    <tr>
                        <th>Name</th>
                        <th>User / Seller</th>
                    </tr>
                    <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                User
                            </td>
                        </tr>
                        <% }); %>
                </table>
                <% } else { %>
                    <p>No users to display...</p>
                <% } %>
        </div>
        
    </body>
</html>