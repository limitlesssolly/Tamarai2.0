<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= Products.name %></title>
    <!-- adding an favicon -->
    <link rel="shortcut icon" type="image/jpg" href="/images/thebluelogo.png" />
    <link rel="stylesheet" href="/css/profile.css" />
    <script
      src="https://kit.fontawesome.com/6baebf3609.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('../partials/sellernav.ejs') %>
    <div class="sellstoo">
      <!-- <a onclick="nav()" class="editia">edits</a> -->
      <div class="viewing" id="viewing" style="display: block">
        <div class="name">
          <h4><%= Products.name %></h4>
        </div>
        <div class="brand">
          <h4>Brand : <%= Products.brand %></h4>
        </div>
        <div class="seller">
          <h4>Seller : <%= Products.seller%></h4>
        </div>
        <div class="price">
          <h4>Price : <%= Products.price%></h4>
        </div>
        <div class="image">
          <h4>
            <img src="/images/products/<%= Products.image %>" width="100" />
          </h4>
        </div>
        <div class="count">
          <h4>Count In Stock : <%= Products.count%></h4>
        </div>
        <div class="category">
          <h4>Category : <%= Products.category%></h4>
        </div>
        <div class="description">
          <h4>Description : <%= Products.description%></h4>
        </div>
        <div class="color">
          <h4>Color : <%= Products.color%></h4>
        </div>

        
        <a href="/seller/dashboard/view/delete/<%=Products._id%>" class="delta"
          >Delete</a
        >
      </div>
      <%- include('../partials/translate.ejs') %> <%-
      include('../partials/footer.ejs') %>
    </div>
  </body>
  <script>
    function nav() {
      if (document.getElementById("updating").style.display == "block") {
        navClose();
      } else if (document.getElementById("updating").style.display == "none") {
        navOpen();
      }
    }
    function navOpen() {
      document.getElementById("updating").style.display = "block";
    }

    function navClose() {
      document.getElementById("updating").style.display = "none";
    }
    function convertColorStringToRGB(colorString) {
        var canvas = document.createElement('canvas');
        canvas.width = canvas.height = 1;
        var ctx = canvas.getContext('2d');
        ctx.fillStyle = colorString;
        ctx.fillRect(0, 0, 1, 1);
        var data = ctx.getImageData(0, 0, 1, 1).data;
        return "rgb(" + data[0] + ", " + data[1] + ", " + data[2] + ")";
    }
  </script>
</html>
