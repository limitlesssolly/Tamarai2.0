<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/seller/seller-sign-in.css">
    <title>
        Seller Login
    </title>
    <link rel="shortcut icon" type="image/jpg" href="/images/thebluelogo.png" />
</head>

<body>
    <div class="seller">
    <div class="Vlogin">
            <!-- <img src="/images/thebluelogo.png" alt="logo" class="logo"> -->
        <div class="Vlogger">
            <h2>Sign in to your account</h2>
            <div class="words">or choose your user</div>
            <a href="/user"><span class="use"><i href="#"><img src='/images/user.png' alt="using"/></i></span></a>
            <a href="/admin"><span class="adds"><i href="#" ><img src='/images/settings.png' alt="sets"/></i></span></a>
