<html>

<head>
    <title>Our products</title>
    <link rel="stylesheet" href="/css/userHomepage.css" />
    <!-- Adding a favicon  -->
    <link rel="shortcut icon" type="image/jpg" href="/images/thebluelogo.png" />
</head>

<body>
    <%- include('../partials/usernav.ejs') %>
    <% if (prod.length> 0) { %>
        <% prod.forEach(function(product) { %>
            <% if (product.category) { %>
                <section class="product">
                    <div class="product-container">
                        <section class="products">
                            <div class="product-container">
                                <div class="product-card">
                                    <div class="product-image">
                                        <span class="discount-tag">number% off</span>
                                        <!-- Image here  -->
                                        <button class="card-btn">Add to wishlist</button>
                                    </div>
                                    <div class="product-info">
                                        <h2 class="product-name"><%= product.name %></h2>
                                        <h2 class="product-brand"><%= product.brand %></h2>
                                        <p class="product-short-des"><%= product.description %></p>
                                        <span class="price">Price after discount L.E.</span>
                                        <span class="actual-price"><%= product.price %></span>
                                    </div>
                                </div>
                            </div>
                        </section>
                </section>
            <% } %>
        <% }); %>
    <% } else { %>
        <h1>No products to show</h1>
    <% } %>
    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/translate.ejs') %>
</body>

</html>