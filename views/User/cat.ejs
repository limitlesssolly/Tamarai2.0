<html>

<head>
    <title>Our products</title>
    <link rel="stylesheet" href="/css/userHomepage.css" />
    <!-- Adding a favicon  -->
    <link rel="shortcut icon" type="image/jpg" href="/images/thebluelogo.png" />
</head>

<body>
    <%- include('../partials/usernav.ejs') %>
    <% if (prods.length> 0) { %>
        <% prods.forEach(function(product) { %>
            <% if (product.category === cats.name) { %>
                <div class="name">
                    <h4>
                        <%= product.name %>
                    </h4>
                </div>
                <div class="brand">
                    <h4>Brand : <%= product.brand %>
                    </h4>
                </div>
                <div class="seller">
                    <h4>Seller : <%= product.seller%>
                    </h4>
                </div>
                <div class="price">
                    <h4>Price : <%= product.price%>
                    </h4>
                </div>
                <div class="image">
                    <h4>
                        <img src="/images/products/<%= product.image %>" width="100">
                    </h4>
                </div>
                <div class="count">
                    <h4>Count In Stock : <%= product.count%>
                    </h4>
                </div>
                <div class="description">
                    <h4>Description : <%= product.description%>
                    </h4>
                </div>
                <div class="color">
                    <h4>Color : <%= product.color%>
                    </h4>
                </div>
            <% } %>
        <% }); %>
    <% } else { %>
        <h1>No products to show</h1>
    <% } %>
    <%- include('../partials/footer.ejs') %>
</body>

</html>