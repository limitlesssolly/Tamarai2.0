<html>

    <head>
        <title>Our products</title>
        <link rel="stylesheet" href="/css/userHomepage.css" />
        <!-- Adding a favicon  -->
        <link rel="shortcut icon" type="image/jpg"
            href="/images/thebluelogo.png" />
    </head>

    <body>
        <%- include('../partials/usernav.ejs') %>
        <% if (productData.length> 0) { %>
        <div class="product-container">
            <% productData.forEach(function(product) { %>
            <% if (product.category === cats.name) { %>
            <div class="product-card">
                <div class="negma" onclick="nav()">
                    <div id="bayna" style="display: none;">
                        <i class="fa fa-star"></i>
                    </div>
                    <div id="baynatoo" style="display: block;">
                        <a
                            href="/user/homepage/add-to-wishlist/<%= product._id%>"
                            style="text-decoration: none;"><i
                                class="fa-regular fa-star"
                                id="star"></i></a>
                    </div>
                </div>
                <div class="product-image">
                    <% if (product.image=="" ) { %>
                    <img src="images/no-image.png" class="product-thumb"
                        alt="No image available">
                    <% } else { %>
                    <a href="/product/<%= product._id %>"><img
                            src="/images/products/<%= product.image %>"
                            class="product-thumb"
                            alt="product">
                        <a class="card-btn"
                            href="./homepage/add/<%= product._id %>">Add to
                            Bag</a>
                        <% } %>
                    </a>

                </div>
                <div class="product-info">

                    <a href="/product/<%= product._id %>">
                        <h2>
                            <%= product.name %>
                        </h2>
                    </a>
                    <h5 class="product-brand">
                        <%= product.seller%>
                    </h5>

                    <% if (product.discount> 0) { %>
                    <span class="price">
                        <%= product.price %>L.E.
                    </span>
                    <span class="actual-price">
                        <%= product.price %>L.E.
                    </span>
                    <% } else { %>
                    <span class="price">
                        <%= product.price %>L.E.
                    </span>
                    <% } %>
                </div>
                <%}%>
            </div>
            <% }); %>
            <%}%>
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>