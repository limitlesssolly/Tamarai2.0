<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/shoppingbag.css">
    <link rel="stylesheet" type="text/css" href="/css/grid-template.css">

    <!-- <link rel="stylesheet" type="text/css" href="/css/sellersc.css"> -->

    <script src="/js/shoppingbag.js"></script>
    <link rel="shortcut icon" type="image/jpg" href="photos/thebluelogo.png" />
    <title>shopping cart</title>

</head>

<body>
    <div class="grid-container">
        <div class="header">
            <section>
                <%- include('../partials/usernav.ejs') %>
            </section>

        </div>
        <div class="body">

            <div class="Cart-Container">

                <div class="Header">
                    <h3 class="Heading , tooltip"><span class="tooltiptext">shopping cart</span>Shopping Cart</h3>
                    <button class="Action" onclick="remove_all()">Remove all</button>
                    <!-- <h5 class="Action">Remove all</h5> -->
                </div>

                <div class="Cart-Items">
                    <div class="product-container">

                        <% productData.forEach(function(product) { %>
                            <div>
                                <div class="image-box">
                                    <img src="<%= product.image %>" class="product-thumb" alt="<%= product.name %>">
                                </div>
                                <div class="about">
                                    <h1 class="title">
                                        <%= product.name %>
                                    </h1>
                                    <h3 class="subtitle">
                                        <%= product.seller%>
                                    </h3>
                                    <img src="photos/street.jpg" alt="street" style="height: 30px;" />
                                </div>
                                <div class="counter"></div>
                                <div class="prices"></div>
                                <div class="counter">
                                    <button class="btn" onclick="counting()">+</button>
                                    <!-- <div class="btn">+</div> -->
                                    <div class="count">1</div>
                                    <button class="btn" onclick="decreasing()">-</button>
                                    <!-- <div class="btn">-</div> -->
                                </div>
                                <div class="prices">
                                    <div class="amount">
                                        <%= product.price%>
                                    </div>
                                    <div class="save"><u>Save for later</u></div>
                                    <button class="remove" onclick="remove_element()"><u>Remove</u></button>
                                </div>
                                <% }); %>

                            </div>
                    </div>
                </div>




                <hr>
                <div class="checkout">
                    <div class="total">
                        <div>
                            <div class="Subtotal">Sub-Total</div>
                            <div class="items"> 2

                            </div>
                            <div class="wriiten_items">items</div>
                        </div>
                        <div class="total-amount"></div>
                    </div>
                    <button class="button">Checkout</button>
                    <!-- <button onclick="myFunction()">Toggle dark mode</button> -->
                </div>
            </div>
        </div>

    </div>

</body>

</html>